source 'https://rubygems.org'

gem 'jekyll'

group :jekyll_plugins do
  gem 'jekyll-gist'
  gem 'jekyll-paginate'
  gem "jekyll-asciidoc"
end

# Use version 2.x sass converter to avoid google-protobuf ARM64 compatibility issues
gem 'jekyll-sass-converter', '~> 2.0'

gem 'asciidoctor', '~> 1.5.4'
gem 'coderay', '1.1.1'

# BibTeX parsing for publications automation
gem 'bibtex-ruby', '~> 6.0'

